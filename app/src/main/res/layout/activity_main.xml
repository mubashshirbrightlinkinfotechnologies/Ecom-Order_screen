<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightpurple">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="136dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_margin="32dp"
                    android:padding="16dp"
                    android:text="Order History"
                    android:textAlignment="center"

                    android:textColor="#FFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.538"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="-1dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/search_box"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:hint="Search “Search by product”"
            android:imeOptions="actionSearch"
            android:inputType="text"

            android:textColor="#000"
            android:textColorHint="#555"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />


        <androidx.cardview.widget.CardView
            android:layout_width="161dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:paddingBottom="23dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/textView5"
                style="@style/btnTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Product"
                android:textAlignment="center"
                />
        </androidx.cardview.widget.CardView>






        <view
            android:id="@+id/view"
            class="androidx.cardview.widget.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">




                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="356dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mouse" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_heading"
                        style="@style/HeadingTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logitech B 170 Wireless Mouse" />

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/SubheadingTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  ₹ 500 " />

                    <TextView
                        android:id="@+id/tv_subheading"
                        style="@style/SubheadingTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  7 days return available " />


                </LinearLayout>




            </LinearLayout>
        </view>

        <TextView
            android:id="@+id/tv_timeheading"
            android:textAlignment="center"
            android:textSize="16dp"
            style="@style/SubheadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  03 May 2024 at 12:14Pm " />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="23dp"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/cancelbtn"
            style="@style/btnTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelled"
            android:textAlignment="center"
            />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="23dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/cancelbtn"
                style="@style/btnTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reorder"
                android:textAlignment="center"
                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>